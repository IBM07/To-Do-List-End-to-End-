# ===========================================
# AuraTask Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (MySQL) - REQUIRED
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=auratask
DB_USER=root
DB_PASSWORD=your_secure_password_here

# ===========================================
# Redis (Cache & Celery Broker) - REQUIRED
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# JWT Authentication - REQUIRED
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# SMTP Settings (Gmail) - Optional
# ===========================================
# To get Gmail App Password:
# 1. Enable 2FA at: https://myaccount.google.com/security
# 2. Generate App Password at: https://myaccount.google.com/apppasswords
# 3. Select "Other (Custom name)" -> "AuraTask"
# 4. Copy the 16-character password below

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=AuraTask
SMTP_FROM_EMAIL=

# ===========================================
# Telegram Bot (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=

# ========================================â€‹===
# Discord Webhook (Optional)
# ===========================================
# Note: Users can configure their own Discord webhooks via Settings Modal
DISCORD_WEBHOOK_URL=

# ===========================================
# Groq AI (for NLP parsing) - Optional
# ===========================================
GROQ_API_KEY=

# ===========================================
# Encryption (for sensitive user data) - REQUIRED FOR PRODUCTION
# ===========================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# ===========================================
# CORS Settings
# ===========================================
# Comma-separated list of allowed origins (production only)
# Development automatically allows all origins (*)
# Example: https://auratask.com,https://www.auratask.com
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Application Settings
# ===========================================
DEBUG=True
ENVIRONMENT=development
